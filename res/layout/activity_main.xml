<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myridetrial.MainActivity"
    android:background="#000000" >
    
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aadhar Number"
        android:textColor="#FFFFFF"
        android:id="@+id/myAadhar"
        android:singleLine="true"
    />
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:id="@+id/myPassword"
        android:singleLine="true"
        android:password="true"
    />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:background="#006600"
        android:textStyle="bold"
        android:id="@+id/myLogin" 
    />
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="#FFFFFF"
        android:background="#006600"
        android:textStyle="bold"
        android:id="@+id/myForgot"
    />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New User? Register Here!"
        android:textColor="#FFFFFF"
        android:background="#006600"
        android:textStyle="bold"
        android:id="@+id/myRegister"
    />
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How we work?"
        android:textColor="#FFFFFF"
        android:background="#FF5600"
        android:textStyle="bold"
        android:id="@+id/myWork"
    />

</LinearLayout>
