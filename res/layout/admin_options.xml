<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000" 
    android:weightSum="100">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="40">
        
        <TextView
	        android:id="@+id/customerName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Hi, Admin!"
	        android:textColor="#FFFFFF"
	        android:textSize="25dp"
	        android:textStyle="bold"
	        android:background="#FF5600" />
        
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/myride_background" 
	        android:padding="20px"/>
	   
	</LinearLayout>

 	<ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60">
   	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:weightSum="100">
	
	        <TextView
	            android:id="@+id/label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Rides"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/allRides"
	            android:layout_weight="18"/>
	        
	        <TextView
	            android:id="@+id/label1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Track a Bike"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/trackBike"
	            android:layout_weight="18"/>
	        
	        <TextView
	            android:id="@+id/label2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Docking Station"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/checkDock"
	            android:layout_weight="18"
	            />
	        
	        <TextView
	            android:id="@+id/label4"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Check a User"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/checkUser"
	            android:layout_weight="18"
	            />
	        
	        
	        <TextView
	            android:id="@+id/label5"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Edit Details"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/admEdit"
	            android:layout_weight="18"
	            />
	        
	        <TextView
	            android:id="@+id/label6"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Logout"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/admlogout"
	            android:layout_weight="18"
	            />
	        
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
