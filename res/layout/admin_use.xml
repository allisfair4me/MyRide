<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="40">
        
        <TextView
	        android:id="@+id/customerName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Hi, Admin!"
	        android:textColor="#FFFFFF"
	        android:textSize="25dp"
	        android:textStyle="bold"
	        android:background="#FF5600" />
        
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/myride_background" 
	        android:padding="20px"/>
	   
	</LinearLayout>
	
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60">
   	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:weightSum="100">
	
	        <TextView
	            android:id="@+id/label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Get Your Bike"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/getBike"
	            android:layout_weight="18"/>
	        
	        <TextView
	            android:id="@+id/label1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="My Rides"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/myRides"
	            android:layout_weight="18"/>
	        
	        <TextView
	            android:id="@+id/label2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Admin Actions"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/admStuff"
	            android:layout_weight="18"/>
	        
	        <TextView
	            android:id="@+id/label3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Edit Profile"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/edit"
	            android:layout_weight="18"
	            />
	        
	        <TextView
	            android:id="@+id/label4"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=" " 
	            android:layout_weight="2"
	            android:editable="false">
	        </TextView>
	        
	        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#006600"
	            android:text="Logout"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold"
	            android:textSize="25dp"
	            android:id="@+id/logout"
	            android:layout_weight="18"
	            />
	        
	    </LinearLayout>
	</ScrollView>
    
    

</LinearLayout>
